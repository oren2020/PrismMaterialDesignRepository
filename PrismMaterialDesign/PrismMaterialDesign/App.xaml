<prism:PrismApplication x:Class="PrismMaterialDesign.App"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                        xmlns:prism="http://prismlibrary.com/"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Custom Resources-->
                <ResourceDictionary Source="pack://application:,,,/PrismMaterialDesign.Resources;component/Resources.xaml"/>

                <!-- Material Design Resources-->
                <!--!!! Redundant – application works fine without Resource.
                        Added here to avoid warning: The resource "MaterialDesignPaper" could not be resolved.
                        In MainWindow :
                        Background="{DynamicResource MaterialDesignPaper}"
                        TextElement.Foreground="{DynamicResource MaterialDesignBody}" !!!-->
                <!--<materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Orange" SecondaryColor="Lime" />-->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
